@model ApplicationCore.Models.MovieDetailResponseModel

@{
    ViewData["Title"] = "Details";
}

<hr />
<div class="container">
    <div class="row" >
        <div class="col">
            <div class="card mb-4">
                <img src="@Model.PosterUrl" class="img-fluid">
            </div>
          
        </div>
        <div class="col">
            <ul class="list-group">
                <li class="font-weight-bold h2">@Model.Title</li>
                <li>
                    @foreach (var genre in Model.Genres)
                    {
                       <a href ="#" class="badge badge-dark" rounded-pill>@genre.Name</a>
                       //<span class="badge bg-dark" rounded-pill>@genre.Name</span>
                    }
                </li>
                <li>
                    <span class="badge bg-warning" rounded-pill>@Model.Rating</span>
                </li>
                <li>@Model.Overview</li>
            </ul>
        </div>
        <div class="col">
            <div class="list-group">
                <button type="button" class="list-group-item list-group-item-action active" aria-current="true">
                    REVIEW
                </button>
                <button type="button" class="list-group-item list-group-item-action">TRAILER</button>
                <button type="button" class="list-group-item list-group-item-action">BUY @Model.Price</button>
                <button type="button" class="list-group-item list-group-item-action">WATCH MOVIE</button>
            </div>
        </div>
    </div>
    <div class="row row-cols-3">
        <div class="col">
            <h4>MOVIE FACTS</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Release Date
                    <span class="badge badge-dark" rounded-pill>@Model.ReleaseDate</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Run Time
                    <span class="badge badge-dark" rounded-pill>@Model.RunTime</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Box Office
                    <span class="badge badge-dark" rounded-pill>@Model.Revenue</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Budget
                    <span class="badge badge-dark" rounded-pill>@Model.Budget</span>
                </li>
            </ul>
        </div>
        <div class="col">
            <h4>CAST</h4>
            <ul class="list-group list-group-flush">
                @foreach (var cast in Model.Casts)
                {
                <li class="list-group-item">
                    @*//<a herf="#"><img src="@cast.ProfilePath" class="img-rounded w-auto h-25"></a>@cast.Name @cast.character*@
                    <div class="container">
                        <div class="row row-cols-3">
                            <div class="col w-25 h-auto" >
                                <a herf="#"><img src="@cast.ProfilePath" class="img-rounded w-auto h-25"></a>
                            </div>
                            <div class="col">
                                <ul >
                                    <li class="list-group-item">@cast.Name</li>
                                    <li class="list-group-item">@cast.character</li>
                                </ul>
                            </div> 
                        </div>
                    </div>
                </li>
                }
            </ul>
        </div>
        
    </div>
</div>
